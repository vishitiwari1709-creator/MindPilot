    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.41.0/dist/apexcharts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        // Initialize Bubble System
        function initBubbles() {
            const container = document.getElementById('bubbles');
            for (let i = 0; i < 30; i++) {
                const bubble = document.createElement('div');
                bubble.className = 'bubble';
                bubble.style.width = Math.random() * 40 + 10 + 'px';
                bubble.style.height = bubble.style.width;
                bubble.style.left = Math.random() * 100 + '%';
                bubble.style.animationDelay = Math.random() * 20 + 's';
                bubble.style.background = Math.random() > 0.5 ? 
                    'rgba(0, 212, 160, 0.2)' : 
                    'rgba(0, 198, 255, 0.2)';
                container.appendChild(bubble);
            }
        }

        // Initialize Map
        function initHydroMap() {
            mapboxgl.accessToken = 'pk.eyJ1IjoiZHJhaW5haSIsImEiOiJjbG9zY25rZngwMDBzMmtwYnVvNHJvbHFqIn0.N_ltkCYlS_nxSXwzwDYF6Q';
            
            const map = new mapboxgl.Map({
                container: 'hydroMap',
                style: 'mapbox://styles/mapbox/light-v11',
                center: [77.2090, 28.6139],
                zoom: 14,
                pitch: 60,
                bearing: -20
            });

            // Add 3D terrain
            map.on('load', () => {
                map.addSource('mapbox-dem', {
                    'type': 'raster-dem',
                    'url': 'mapbox://mapbox.mapbox-terrain-dem-v1',
                    'tileSize': 512,
                    'maxzoom': 14
                });
                
                map.setTerrain({ 'source': 'mapbox-dem', 'exaggeration': 1.5 });

                // Add drainage network
                map.addSource('hydro-drainage', {
                    'type': 'geojson',
                    'data': {
                        'type': 'FeatureCollection',
                        'features': [
                            {
                                'type': 'Feature',
                                'properties': { 'type': 'main', 'capacity': 'high' },
                                'geometry': {
                                    'type': 'LineString',
                                    'coordinates': [
                                        [77.1990, 28.6239],
                                        [77.2020, 28.6209],
                                        [77.2060, 28.6189],
                                        [77.2100, 28.6159],
                                        [77.2150, 28.6139]
                                    ]
                                }
                            }
                        ]
                    }
                });

                map.addLayer({
                    'id': 'hydro-drainage-layer',
                    'type': 'line',
                    'source': 'hydro-drainage',
                    'paint': {
                        'line-color': '#00d4a0',
                        'line-width': 4,
                        'line-opacity': 0.8
                    }
                });

                // Add hotspot markers
                const hotspots = [
                    { coord: [77.2000, 28.6250], risk: 'high', value: 100 },
                    { coord: [77.2050, 28.6200], risk: 'medium', value: 60 },
                    { coord: [77.2120, 28.6140], risk: 'low', value: 30 }
                ];

                hotspots.forEach(hotspot => {
                    new mapboxgl.Marker({
                        color: hotspot.risk === 'high' ? '#ff6b6b' : 
                               hotspot.risk === 'medium' ? '#ffa502' : '#00d4a0',
                        scale: 0.8
                    })
                    .setLngLat(hotspot.coord)
                    .setPopup(new mapboxgl.Popup().setHTML(`
                        <div class="hydro-card p-3">
                            <h6 class="hydro-text">Hotspot Analysis</h6>
                            <p>Risk Level: ${hotspot.risk.toUpperCase()}</p>
                            <p><small>Value: ${hotspot.value}</small></p>
                        </div>
                    `))
                    .addTo(map);
                });
            });

            return map;
        }

        // Initialize Charts
        function initHydroCharts() {
            // Elevation Chart
            const elevationChart = new ApexCharts(document.querySelector("#elevationChart"), {
                series: [{
                    name: 'Elevation Profile',
                    data: [210, 225, 240, 235, 220, 215, 205, 210, 210]
                }],
                chart: {
                    type: 'area',
                    height: 300,
                    foreColor: '#00d4a0',
                    toolbar: { show: false }
                },
                colors: ['#00d4a0'],
                stroke: { curve: 'smooth', width: 3 },
                fill: {
                    type: 'gradient',
                    gradient: {
                        shadeIntensity: 1,
                        opacityFrom: 0.7,
                        opacityTo: 0.1,
                        stops: [0, 90, 100]
                    }
                },
                xaxis: {
                    categories: ['N', 'NE', 'E', 'SE', 'S', 'SW', 'W', 'NW', 'N']
                }
            });
            elevationChart.render();

            // Hydrology Chart
            const hydrologyChart = new ApexCharts(document.querySelector("#hydrologyChart"), {
                series: [{
                    name: 'Rainfall',
                    data: [25, 30, 45, 60, 120, 250, 300, 280, 180, 80, 40, 30]
                }, {
                    name: 'Runoff',
                    data: [500, 600, 800, 1200, 2500, 5200, 6000, 5600, 3600, 1600, 800, 600]
                }],
                chart: {
                    type: 'radar',
                    height: 300
                },
                colors: ['#00d4a0', '#00c6ff'],
                xaxis: {
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                }
            });
            hydrologyChart.render();

            // AI Chart
            const aiChart = new ApexCharts(document.querySelector("#aiChart"), {
                series: [{
                    name: 'Feature Importance',
                    data: [95, 88, 82, 75, 65]
                }],
                chart: {
                    type: 'radialBar',
                    height: 300
                },
                colors: ['#00d4a0'],
                plotOptions: {
                    radialBar: {
                        hollow: { size: '70%' }
                    }
                },
                labels: ['Elevation', 'Intensity', 'RGB', 'Return', 'Angle']
            });
            aiChart.render();

            // Predictive Chart
            const predictiveChart = new ApexCharts(document.querySelector("#predictiveChart"), {
                series: [{
                    name: 'Flood Risk',
                    data: [30, 40, 35, 50, 49, 60, 70, 91, 125]
                }],
                chart: {
                    type: 'line',
                    height: 300
                },
                colors: ['#00d4a0'],
                stroke: { curve: 'smooth', width: 3 },
                xaxis: {
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep']
                }
            });
            predictiveChart.render();

            return { elevationChart, hydrologyChart, aiChart, predictiveChart };
        }

        // Neural Canvas Visualization
        function initNeuralCanvas() {
            const canvas = document.getElementById('neuralCanvas');
            const ctx = canvas.getContext('2d');
            
            canvas.width = canvas.parentElement.clientWidth;
            canvas.height = canvas.parentElement.clientHeight;
            
            const neurons = [];
            const connections = [];
            
            // Create neurons
            for (let i = 0; i < 15; i++) {
                neurons.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    radius: Math.random() * 8 + 4,
                    color: Math.random() > 0.5 ? '#00d4a0' : '#00c6ff',
                    pulse: Math.random() * Math.PI * 2
                });
            }
            
            // Create connections
            neurons.forEach((neuron, i) => {
                for (let j = i + 1; j < neurons.length; j++) {
                    if (Math.random() > 0.7) {
                        connections.push({
                            from: neuron,
                            to: neurons[j],
                            strength: Math.random()
                        });
                    }
                }
            });
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                // Draw connections
                connections.forEach(conn => {
                    ctx.beginPath();
                    ctx.moveTo(conn.from.x, conn.from.y);
                    ctx.lineTo(conn.to.x, conn.to.y);
                    ctx.strokeStyle = `rgba(0, 212, 160, ${conn.strength * 0.3})`;
                    ctx.lineWidth = conn.strength * 2;
                    ctx.stroke();
                });
                
                // Draw neurons
                neurons.forEach(neuron => {
                    neuron.pulse += 0.05;
                    
                    ctx.beginPath();
                    ctx.arc(neuron.x, neuron.y, neuron.radius + Math.sin(neuron.pulse) * 2, 0, Math.PI * 2);
                    ctx.fillStyle = neuron.color;
                    ctx.fill();
                    
                    ctx.beginPath();
                    ctx.arc(neuron.x, neuron.y, neuron.radius, 0, Math.PI * 2);
                    ctx.strokeStyle = '#ffffff';
                    ctx.lineWidth = 2;
                    ctx.stroke();
                });
                
                requestAnimationFrame(animate);
            }
            
            animate();
            
            window.addEventListener('resize', () => {
                canvas.width = canvas.parentElement.clientWidth;
                canvas.height = canvas.parentElement.clientHeight;
            });
        }

        // Processing Log System
        function addProcessingLog(message, type = 'info') {
            const log = document.getElementById('processingLog');
            const timestamp = new Date().toLocaleTimeString();
            const colors = {
                info: '#00c6ff',
                success: '#00d4a0',
                warning: '#ffa502',
                error: '#ff6b6b'
            };
            
            const line = document.createElement('div');
            line.className = 'terminal-line';
            line.innerHTML = `<span style="color: ${colors[type]}">[${timestamp}]</span> ${message}`;
            log.appendChild(line);
            log.scrollTop = log.scrollHeight;
        }

        // Processing Simulation
        function simulateProcessing() {
            const steps = [
                {delay: 1000, message: "Initializing AI pipeline...", type: "info"},
                {delay: 2000, message: "Loading point cloud data (125.8M points)...", type: "info"},
                {delay: 3000, message: "Running AI classification...", type: "warning"},
                {delay: 4000, message: "Classification accuracy: 99.2%", type: "success"},
                {delay: 5000, message: "Generating DTM...", type: "info"},
                {delay: 6000, message: "DTM resolution: 0.5m", type: "success"},
                {delay: 7000, message: "Analyzing hydrological patterns...", type: "info"},
                {delay: 8000, message: "Flow accumulation: 85% high flow", type: "warning"},
                {delay: 9000, message: "Running AI network optimization...", type: "info"},
                {delay: 10000, message: "Network efficiency: 92.7%", type: "success"},
                {delay: 11000, message: "Generating predictive analytics...", type: "info"},
                {delay: 12000, message: "Prediction confidence: 94.3%", type: "success"},
                {delay: 13000, message: "Processing complete", type: "success"}
            ];

            let totalDelay = 0;
            steps.forEach(step => {
                setTimeout(() => {
                    addProcessingLog(step.message, step.type);
                }, totalDelay);
                totalDelay += step.delay;
            });
        }

        // AI Assistant
        function initAIAssistant() {
            const aiResponses = [
                "AI analysis suggests increasing drainage capacity in Zone A.",
                "Neural network predicts 85% probability of flooding in next 24 hours.",
                "Optimization algorithm recommends 15% cost reduction through pipe resizing.",
                "Real-time sensor data indicates rising water levels in the eastern sector.",
                "Machine learning model suggests adding retention ponds at coordinates [77.201, 28.624].",
                "AI simulation shows 92% efficiency with current network design.",
                "AI recommendation: Activate emergency protocol in high-risk zones."
            ];

            document.getElementById('sendAiQuery').addEventListener('click', () => {
                const query = document.getElementById('aiQuery').value;
                if (!query) return;
                
                const chat = document.getElementById('aiChat');
                chat.innerHTML += `<div class="terminal-line">> USER: ${query}</div>`;
                chat.innerHTML += `<div class="terminal-line">> AI: ${aiResponses[Math.floor(Math.random() * aiResponses.length)]}</div>`;
                document.getElementById('aiQuery').value = '';
                chat.scrollTop = chat.scrollHeight;
            });

            document.getElementById('aiQuery').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    document.getElementById('sendAiQuery').click();
                }
            });
        }

        // File Upload Simulation
        function initHydroUpload() {
            const dropZone = document.getElementById('hydroDropZone');
            const fileInput = document.getElementById('hydroFileInput');
            const fileQueue = document.getElementById('hydroFileQueue');

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.style.border = '3px solid #00d4a0';
                    dropZone.style.background = 'rgba(0, 212, 160, 0.1)';
                });
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.style.border = '3px dashed #00d4a0';
                    dropZone.style.background = 'rgba(0, 212, 160, 0.05)';
                });
            });

            dropZone.addEventListener('drop', handleDrop);
            fileInput.addEventListener('change', handleFileSelect);

            function handleDrop(e) {
                const files = e.dataTransfer.files;
                handleFiles(files);
            }

            function handleFileSelect() {
                handleFiles(this.files);
            }

            function handleFiles(files) {
                fileQueue.innerHTML = '';
                Array.from(files).forEach((file, index) => {
                    const fileSize = (file.size / (1024 * 1024)).toFixed(2);
                    const div = document.createElement('div');
                    div.className = 'hydro-card mb-2 p-3';
                    div.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-file-earmark-binary-fill text-hydro-green"></i>
                                <strong>${file.name}</strong>
                            </div>
                            <div>
                                <span class="text-hydro-green">${fileSize} MB</span>
                                <div class="hydro-progress mt-1">
                                    <div class="hydro-progress-bar upload-progress" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>
                    `;
                    fileQueue.appendChild(div);
                    
                    simulateUpload(div.querySelector('.upload-progress'), index);
                });
            }

            function simulateUpload(progressBar, index) {
                let progress = 0;
                const interval = setInterval(() => {
                    progress += Math.random() * 15;
                    if (progress >= 100) {
                        progress = 100;
                        clearInterval(interval);
                        addProcessingLog(`File ${index + 1} uploaded successfully`, "success");
                    }
                    progressBar.style.width = `${progress}%`;
                }, 200);
            }
        }

        // Toast Notifications
        function showNotification(message, type = 'info') {
            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                style: { 
                    background: type === 'success' ? "linear-gradient(to right, #00d4a0, #00b894)" :
                               type === 'error' ? "linear-gradient(to right, #ff6b6b, #ee5a52)" :
                               type === 'warning' ? "linear-gradient(to right, #ffa502, #ff7f00)" :
                               "linear-gradient(to right, #00c6ff, #0097e6)"
                }
            }).showToast();
        }

        // Initialize Everything
        document.addEventListener('DOMContentLoaded', () => {
            initBubbles();
            const map = initHydroMap();
            const charts = initHydroCharts();
            initNeuralCanvas();
            initAIAssistant();
            initHydroUpload();

            // Add initial logs
            addProcessingLog("System initialized successfully", "success");
            addProcessingLog("AI models loaded", "success");
            addProcessingLog("Ready for processing", "info");

            // Event Listeners
            document.getElementById('startProcessing').addEventListener('click', simulateProcessing);
            document.getElementById('startHydroUpload').addEventListener('click', () => {
                $('#uploadModal').modal('hide');
                simulateProcessing();
            });
            document.getElementById('clearLog').addEventListener('click', () => {
                document.getElementById('processingLog').innerHTML = '';
                addProcessingLog("Log cleared", "info");
            });
            document.getElementById('optimizeAI').addEventListener('click', () => {
                addProcessingLog("Running AI optimization...", "info");
                setTimeout(() => addProcessingLog("Optimization complete: 15% cost reduction achieved", "success"), 3000);
            });
            document.getElementById('exportResults').addEventListener('click', () => {
                addProcessingLog("Exporting results...", "info");
                setTimeout(() => addProcessingLog("Export complete: 12 files generated", "success"), 2000);
            });

            // Map Controls
            document.getElementById('zoomIn').addEventListener('click', () => map.zoomIn());
            document.getElementById('zoomOut').addEventListener('click', () => map.zoomOut());
            document.getElementById('flyTo').addEventListener('click', () => {
                map.flyTo({
                    center: [77.2090, 28.6139],
                    zoom: 16,
                    pitch: 75,
                    bearing: 30,
                    duration: 3000
                });
            });

            // Real-time Data Updates
            setInterval(() => {
                // Update sensor readings
                const temp = Math.floor(Math.random() * 10) + 20;
                const humidity = Math.floor(Math.random() * 20) + 60;
                document.querySelectorAll('.hydro-text')[15].textContent = `${temp}°C`;
                document.querySelectorAll('.hydro-text')[16].textContent = `${humidity}%`;
            }, 5000);

            // Auto-refresh charts
            setInterval(() => {
                charts.elevationChart.updateSeries([{
                    data: Array.from({length: 9}, () => Math.floor(Math.random() * 50) + 200)
                }]);
            }, 10000);
        });

        // Keyboard Shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'p') {
                e.preventDefault();
                simulateProcessing();
            }
            if (e.ctrlKey && e.key === 'u') {
                e.preventDefault();
                $('#uploadModal').modal('show');
            }
            if (e.ctrlKey && e.key === 'a') {
                e.preventDefault();
                $('#aiModal').modal('show');
            }
        });
    </script>
</body>
</html>
